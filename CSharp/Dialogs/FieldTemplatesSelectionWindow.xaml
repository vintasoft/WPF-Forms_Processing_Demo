<Window x:Class="WpfFormsProcessingDemo.FieldTemplatesSelectionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Select Form Field Templates" 
    Height="390" Width="485"
    MinHeight="150" MinWidth="190"    
    WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="33" />
        </Grid.RowDefinitions>
        <ListBox Name="fieldTemplatesCheckedListBox" Grid.Row="0" />
        
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="btOk" Width="75" Height="23" Margin="3" Click="btOk_Click">OK</Button>
            <Button Name="btCancel" Width="75" Height="23" Margin="3" Click="btCancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
