<Window x:Class="WpfDemosCommonCode.Imaging.OcrLanguagesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CustomControls="clr-namespace:WpfDemosCommonCode.Imaging"
    Title="OCR Languages" Height="406" Width="276" ResizeMode="NoResize">
    <Grid Margin="3">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="29" />
            <RowDefinition Height="29" />
        </Grid.RowDefinitions>
        
        <CustomControls:OcrLanguagesListBox x:Name="ocrLanguagesListBox1" Grid.Row="0"/>
        
        <Button Grid.Row="1" Height="23" Name="downloadAdditionalLanguageDictionariesButton" Click="downloadAdditionalLanguageDictionariesButton_Click">Download additional language dictionaries...</Button>
        
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
            <Button Name="buttonOK" Width="75" Height="23" Margin="0,0,3,0" IsDefault="True" Click="buttonOK_Click">OK</Button>
            <Button Name="buttonCancel" Width="75" Height="23" IsCancel="True">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
